



if [ -z "$1" ]
then
    echo -e '\n\n\n\n鈴'
else
    case $1 in
        )
            loginctl terminate-session ${XDG_SESSION_ID-}
            ;;
        鈴)
            systemctl suspend
            ;;
        )
            systemctl reboot
            ;;
        )
            systemctl poweroff
            ;;
        )
            betterlockscreen -l >> /dev/null &
            ;;
    esac
fi