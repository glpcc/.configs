



if [ -z "$1" ]
then
    echo -e '\n\n\n󰒲'
else
    case $1 in
        󰒲)
            systemctl suspend
            ;;
        )
            systemctl reboot
            ;;
        )
            systemctl poweroff
            ;;
        )
            betterlockscreen -l >> /dev/null &
            ;;
    esac
fi