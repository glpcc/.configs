
declare -A texts
texts[logout]=""
texts[suspend]="鈴"
texts[reboot]=""
texts[shutdown]=""



if [ -z "$1" ]
then
    for i in "${texts[@]}"
    do 
        echo $i;
    done
else
    case $1 in
        )
            loginctl terminate-session ${XDG_SESSION_ID-}
            ;;
        鈴)
            systemctl suspend
            ;;
        )
            systemctl reboot
            ;;
        )
            systemctl poweroff
            ;;
    esac
fi